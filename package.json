  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/twilio-labs/twilio-firebase-extensions/issues"
  },
  "homepage": "https://github.com/twilio-labs/twilio-firebase-extensions#readme",
  "devDependencies": {
    "firebase-tools": "^11.14.0",
    "lerna": "^5.5.2",
    "typescript": "^4.4.3"
  }
}
