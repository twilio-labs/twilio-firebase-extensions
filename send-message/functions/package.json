{
  "name": "send-message",
  "version": "0.3.2",
  "description": "Send messages with the Twilio API by publishing custom events or adding documents to a Firestore collection",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "node -p \"'export const APP_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf lib",
    "compile": "tsc",
    "build": "npm run clean && npm run compile",
    "watch": "tsc --watch",
    "generate-readme": "firebase ext:info .. --markdown > ../README.md",
    "firebase:publish": "firebase ext:dev:publish twilio/send-message"
  },
  "keywords": [
    "twilio",
    "firebase"
  ],
  "author": "Twilio Inc. <open-source@twilio.com> (https://www.twilio.com/labs)",
  "contributors": [
    "Phil Nash <philnash@twilio.com> (https://philna.sh)"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.16.0",
    "twilio": "^4.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.23.4",
    "firebase-functions-test": "^0.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  }
}
